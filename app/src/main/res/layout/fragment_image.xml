<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.example.abhi.grammyquiz.ImageQuestionFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView

            android:id="@+id/innervisions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/innervisions"
            android:layout_marginBottom="10dp"
            android:layout_alignParentTop="true" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="What year did this album win the Grammy Award for Album of the Year?"
            android:id="@+id/imagequestion"
            android:layout_below="@+id/innervisions"
            android:layout_centerHorizontal="true" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SUBMIT"
            android:id="@+id/button2"
            android:onClick="onClickSubmit"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true">

        </Button>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/year_submission"
            android:layout_below="@+id/imagequestion"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>
</FrameLayout>